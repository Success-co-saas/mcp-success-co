# =============================================================================
# Success.co MCP Server Configuration
# =============================================================================

# Environment
NODE_ENV=development

# Server Configuration
PORT=3001
CORS_ORIGIN=*

# GraphQL Endpoint
# For local development (default):
GRAPHQL_ENDPOINT=http://localhost:5174/graphql
# For production:
# GRAPHQL_ENDPOINT=https://api.success.co/graphql

# Database Configuration
# Option 1: Connection URL
DATABASE_URL=postgresql://user:password@localhost:5432/database

# Option 2: Individual parameters (alternative to DATABASE_URL)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=database
# DB_USER=user
# DB_PASS=password

# OAuth Configuration (optional, auto-detected if not set)
# OAUTH_SERVER_URL=https://auth.success.co

# Development Mode Settings
# Enable API key authentication in development (instead of OAuth)
DEVMODE_SUCCESS_USE_API_KEY=false
# DEVMODE_SUCCESS_API_KEY=your-api-key-here

# Debug Logging
DEBUG=false
